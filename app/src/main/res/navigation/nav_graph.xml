<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph"
            app:startDestination="@id/overviewFragment">

    <fragment android:id="@+id/overviewFragment"
              android:name="ai.tomorrow.movietime.overview.OverviewFragment"
              android:label="OverviewFragment">
        <action android:id="@+id/action_overviewFragment_to_detailFragment"
                app:destination="@id/detailFragment"
                app:popUpTo="@+id/overviewFragment"/>
    </fragment>

    <fragment android:id="@+id/detailFragment"
              android:name="ai.tomorrow.movietime.detail.DetailFragment"
              android:label="DetailFragment"/>
</navigation>